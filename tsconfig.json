{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@screens": ["./src/screens"],
      "@components": ["./src/components"],
      "@utils": ["./src/utils"],
      "@hooks": ["./src/hooks"],
      "@types": ["./src/types"],
      "@enums": ["./src/enums"],
      "@errors": ["./src/errors"],
      "@configs": ["./src/configs"],
      "@constants": ["./src/constants"],
      "@store/*": ["./src/store/*"],
      "@global": ["./src/global"],
      "@context": ["./src/context"]
    }
  },
  "exclude": ["node_modules", "babel.config.js"]
}
